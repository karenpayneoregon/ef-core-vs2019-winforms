<Window
    x:Class="NorthWindApplicationWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NorthWindApplicationWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="C# 8 Code sample: Using declarations"
    Width="342"
    Height="157"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*" />
            <RowDefinition Height="28*" />
        </Grid.RowDefinitions>
        <ComboBox
            Width="300"
            Height="24"
            Margin="0,23,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <Button
            Grid.Row="1"
            Margin="10,17,10,27"
            Content="Export by country to comma delimited .csv file" />
        <Label
            Grid.Row="0"
            Margin="8,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Country list" />
    </Grid>
</Window>
